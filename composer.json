{
  "name": "leroy-merlin-br/bazaarvoice-productfeed",
  "type": "library",
  "description": "A PHP library for generating Bazaarvoice XML ProductFeeds.",
  "keywords": [
    "bazaarvoice"
  ],
  "homepage": "https://github.com/leroy-merlin-br/bazaarvoice-productfeed",
  "license": "MIT",
  "authors": [{
    "name": "Michael Miles",
    "email": "mikemiles86@gmail.com"
  }],
  "require": {
    "php": ">=7.1",
    "phpseclib/phpseclib": "~2.0",
    "ext-simplexml": "*"
  },
  "require-dev": {
    "ext-curl": "*",
    "phpunit/phpunit": "^5.7",
    "mikey179/vfsStream": "~1"
  },
  "autoload": {
    "psr-4" : {
      "BazaarVoice\\" : "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  }
}
